# Settings in this file affect all programs that use the GNU readline library, e.g. bash, zsh ...
#
# Allow up/down autocompletion of commands from bash history.
# From: coderwall.com/p/oqtj8w
"\e[A": history-search-backward
"\e[B": history-search-forward

# Allow ctrl-p ctrl-n autocompletion of commands from bash history.
"\C-p":history-search-backward
"\C-n":history-search-forward

set completion-ignore-case on
# the maximum number of characters to be the common prefix to display for
# completions. Useful when auto completing in a directory in which a lot of
# files have a long common prefix
set completion-prefix-display-length 3
# symbolic link to a directory shall have a slash appended
set mark-symlinked-directories on
# completions shall be listed immediately instead of ringing the bell when more
# than one possible completion is available
set show-all-if-ambiguous on
# completions shall be listed immediately instead of ringing the bell when more
# than one possible completion is available but no partial completion is made
set show-all-if-unmodified on
# characters that indicate file types reported by `stat` shall be appended
set visible-stats on
set colored-stats on

set editing-mode vi
